<div>
    @{
        ViewBag.Title = "Reporte de Gastos Mensuales";
    }
</div>
<div class="custom_page_title"> Reporte de Gastos Mensuales </div>
<!-- Form 1 - Búsqueda avnzada + Grid -->
<div class="form-font-size-sm">
    <div class="form-left-spacing " id="">
        <form id="frmAvanzadaReportExpenses" name="frmAvanzadaReportExpenses" role="form" data-toggle="validator" method="post" class="form-inline bs-component">
            <div class="form-row col-8">
                <div class="form-group col-1 margin-right-md ">
                    <label class="control-label" for="hotel">Año:</label>
                    <div class="form-group reqs">
                        <select class="year form-control input-height-xsm padding-no-padding" id="year" name="year" placeholder="Seleccione ..."> </select>
                    </div>
                </div>
                <div class="form-group col-2 margin-right-md ">
                    <label class="col-form-label" for="hotel">Mes:</label>
                    <div class="form-group reqs">
                        <select class="form-control input-height-xsm padding-no-padding" id="month"
                                name="month" placeholder="Seleccione ...">
                            <option value="0" selected="selected">Todos</option>
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                    </div>
                </div>
                <div class="form-group margin-right-md ">
                    <label class="col-form-label" for="Segment">Segmento:</label>
                    <div class="form-group reqs">
                        <select class="form-control input-height-xsm padding-no-padding Segment" id="Segment" name="Segment" placeholder="Seleccione ..."></select>
                    </div>
                </div>
                <div class="form-group margin-right-md ">
                    <label class="col-form-label" for="Company">Unidad de negocio:</label>
                    <div class="form-group reqs">
                        <select class="form-control input-height-xsm padding-no-padding Company" id="Company" name="Company" placeholder="Seleccione ..."></select>
                    </div>
                </div>
                <div class="form-group margin-right-md ">
                    <label class="col-form-label" for="typeReport">Tipo de Reporte:</label>
                    <div class="form-group reqs">
                        <select class="form-control input-height-xsm padding-no-padding typeReport" id="typeReport" name="typeReport" placeholder="Seleccione ..."></select>
                    </div>
                </div>
                <div class="form-group margin-right-md ">
                    <button class="btn btn-sm btn-secondary" id="btngeneratereport" name="btngeneratereport">Generar</button>
                </div>

            </div>
        </form>
        @using (Html.BeginForm("ExportToExcel", "reports", FormMethod.Post, new { @class = "fromRigth" }))
        {
            <input type="hidden" name="nameFile" value="">
            <input type="hidden" name="gridHtml" value="">
            <div class="form-group col margin-right-md ">
                <input type="submit" class="btn btn-success btn-sm" id="btnExportMontly" name="btnExportMontly" value="Exportar Excel">
            </div>
        }
    </div>
</div>

