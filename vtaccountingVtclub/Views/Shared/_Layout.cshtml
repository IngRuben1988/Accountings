<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <title>VTA - @ViewBag.Title</title>
    @Styles.Render("~/bundles/css")
</head>
<body>
    <div class="" style="top: 0 !important; font-size: 13px !important; position: fixed !important;right: 0 !important;left: 0 !important; z-index: 1030;">
        @Html.Partial("_LoginPartial")
    </div>
    <div class="container-fluid vtabody" style="margin-top: 5rem !important;">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year VTAccounting for WorldPass by VTSoftware S. A de C. V. </p>
    </footer>
    <!-- Modal processing -->
    <div class="modal fade processingModal" id="processingModal" name="processingModal" role="dialog">
        <div class="modal-dialog modal-sm" id="">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div style="align-content:center ; text-align: center;">
                        <!-- <h6 class="modal-title"> Procesando datos</h6> <img src="~/Content/img/processing.gif" /> <h6> Espere .... </h6> -->
                        <h6 class="modal-title"> Procesando datos</h6>
                        <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <h6> Espere .... </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tempus_datetime")
    @Scripts.Render("~/bundles/fontawesome")
    @Scripts.Render("~/bundles/jqueryconfirm")
    @Scripts.Render("~/bundles/notify")
    @Scripts.Render("~/bundles/axios")
    @Scripts.Render("~/bundles/modernizr")


    @******* Utils ********@
    @Scripts.Render("~/bundles/utils_datetime")
    @Scripts.Render("~/bundles/business")
    @Scripts.Render("~/bundles/account")
    @RenderSection("scripts", required: false)
    <script>
    //session end
    var sessionTimeoutWarning = @Session.Timeout- 1;

    var sTimeout = parseInt(sessionTimeoutWarning) * 540 * 1000;

        //Disable Back Button In All Browsers.
        function DisableBackButtonAllBrowsers() {
            window.history.forward()
        };
        DisableBackButtonAllBrowsers();
        window.onload = DisableBackButtonAllBrowsers;
        window.onpageshow = function (evts) { if (evts.persisted) DisableBackButtonAllBrowsers(); };
        window.onunload = function () { void (0) };


    setTimeout('SessionEnd()', sTimeout);


    function SessionEnd() {
        window.location = "/Account/LogOff";
    }
    </script>
</body>
</html>
