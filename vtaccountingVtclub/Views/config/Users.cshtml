    a, a:hover {
        color: #333
    }

    .changepass {
        width: 30px!important;
        height: 27px;
        margin: 0px 0 0 0;
        border: 1px solid #adb5bd;
        /* border-left: 0px; */
        /* border-right: 5px; */
        border-radius: 1px 4px 4px 1px;
        background: #e9ecef;
    }
    
